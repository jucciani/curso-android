<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/vipItemTitle"
            android:layout_weight="1"
            android:textStyle="bold" />

        <com.ar.view.ItemImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vipItemImage"
            android:layout_weight="50"
            android:adjustViewBounds="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/vipItemPrice"
            android:layout_weight="1"
            android:textColor="#900"
            android:textStyle="bold" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vipItemCondition"
            android:layout_weight="1" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vipItemLocation"
            android:layout_weight="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vipItemAvailableQuantity"
            android:layout_weight="1" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/vipItemDescription"
            android:layout_weight="1" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/buy"
            android:id="@+id/button"
            android:background="#3e52a1"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textSize="25dp"
            android:clickable="true"
            android:fontFamily='Arial,Helvetica,"Nimbus Sans L",sans-serif' />

    </LinearLayout>
</ScrollView>
